{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es6",
    "esModuleInterop": true,
    "typeRoots": [
      "@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "**.ts",
    "*.d.ts",
    "scripts"
  ],
}